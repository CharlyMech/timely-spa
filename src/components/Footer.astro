						</svg>
					</a>
					<a
						href="#"
						target="_blank"
						rel="noopener noreferrer"
						class="w-10 h-10 rounded-full bg-background dark:bg-background-dark flex items-center justify-center text-on-background/60 dark:text-on-background-dark/60 hover:bg-primary hover:text-on-primary transition-all duration-300 hover:scale-110"
						aria-label="LinkedIn"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
						</svg>
					</a>
					<a
						href="#"
						target="_blank"
						rel="noopener noreferrer"
						class="w-10 h-10 rounded-full bg-background dark:bg-background-dark flex items-center justify-center text-on-background/60 dark:text-on-background-dark/60 hover:bg-primary hover:text-on-primary transition-all duration-300 hover:scale-110"
						aria-label="Twitter"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>

		<!-- Bottom -->
		<div class="pt-8 border-t border-outline/20">
			<div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
				<p class="text-sm text-on-background/60 dark:text-on-background-dark/60 text-center md:text-left footer-copyright">
					© {currentYear} Timely. Todos los derechos reservados.
				</p>
				<div class="flex items-center space-x-2 text-sm text-on-background/60 dark:text-on-background-dark/60">
					<span class="footer-made-with">Hecho con</span>
					<span class="text-error">♥</span>
					<span class="footer-made-by">por Carlos</span>
				</div>
			</div>
		</div>
	</div>

	<!-- Decorative gradient -->
	<div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary via-warning to-primary"></div>
</footer>

<script>
	// Update footer text based on language from localStorage
	function updateFooterLanguage() {
		const storedPrefs = localStorage.getItem('timely-preferences');
		let savedLanguage = 'es';

		if (storedPrefs) {
			try {
				const prefs = JSON.parse(storedPrefs);
				savedLanguage = prefs.state?.language || 'es';
			} catch (e) {
				savedLanguage = 'es';
			}
		}
		const isSpanish = savedLanguage === 'es';

		// Update description
		const description = document.querySelector('.footer-description');
		if (description) {
			description.textContent = isSpanish
				? 'Transformando la gestión del tiempo para PYMEs modernas.'
				: 'Transforming time management for modern SMEs.';
		}

		// Update quick links title
		const quickLinksTitle = document.querySelector('.footer-title');
		if (quickLinksTitle) {
			quickLinksTitle.textContent = isSpanish ? 'Enlaces Rápidos' : 'Quick Links';
		}

		// Update links
		const aboutLink = document.querySelector('.footer-link-about');
		if (aboutLink) aboutLink.textContent = isSpanish ? 'Acerca de' : 'About';

		const featuresLink = document.querySelector('.footer-link-features');
		if (featuresLink) featuresLink.textContent = isSpanish ? 'Características' : 'Features';

		const privacyLink = document.querySelector('.footer-link-privacy');
		if (privacyLink) privacyLink.textContent = isSpanish ? 'Privacidad' : 'Privacy';

		const termsLink = document.querySelector('.footer-link-terms');
		if (termsLink) termsLink.textContent = isSpanish ? 'Términos' : 'Terms';

		// Update contact title
		const contactTitle = document.querySelector('.footer-contact-title');
		if (contactTitle) {
			contactTitle.textContent = isSpanish ? 'Contacto' : 'Contact';
		}

		// Update social title
		const socialTitle = document.querySelector('.footer-social-title');
		if (socialTitle) {
			socialTitle.textContent = isSpanish ? 'Síguenos' : 'Follow Us';
		}

		// Update copyright
		const copyright = document.querySelector('.footer-copyright');
		if (copyright) {
			const year = new Date().getFullYear();
			copyright.textContent = isSpanish
				? `© ${year} Timely. Todos los derechos reservados.`
				: `© ${year} Timely. All rights reserved.`;
		}

		// Update made with text
		const madeWith = document.querySelector('.footer-made-with');
		if (madeWith) madeWith.textContent = isSpanish ? 'Hecho con' : 'Made with';

		const madeBy = document.querySelector('.footer-made-by');
		if (madeBy) madeBy.textContent = isSpanish ? 'por Carlos' : 'by Carlos';
	}

	// Update on load
	updateFooterLanguage();

	// Listen for language changes from other tabs
	window.addEventListener('storage', (e) => {
		if (e.key === 'timely-preferences') {
			updateFooterLanguage();
		}
	});

	// Listen for custom event from Zustand
	window.addEventListener('languageChange', updateFooterLanguage);
</script>
